#include <stdio.h>
#include <conio.h>
#include <string.h>

int main () {

 char name[50];

 int i,len;
 
 clrscr();

printf("Enter a Name::");
gets(name);

 len = strlen(name);

 for(i = 0; i < len; i++) {
   
   if((name[i] == 'a') || (name[i] == 'e') || (name[i] == 'i') || (name[i] == 'o') || (name[i] == 'u')) || (name[i] == 'A') || (name[i] == 'E') || (name[i] == 'I') || (name[i] == 'O') || (name[i] == 'U'){

   printf("\n%c at %d", name[i],i+1);

 }

}
 

 getch();
 return 0;

}
