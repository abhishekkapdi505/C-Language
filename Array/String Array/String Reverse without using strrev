#include <stdio.h>
#include <conio.h>
#include <string.h>
#include <math.h>

int main () {

 char a[20],temp;
 int i,j,len;
 clrscr();

 printf("Enter a Name::");
 scanf("%s",a);

 len = strlen(a)-1;

 i = 0;

 j = len;


while(i < j) {

 temp = a[i];

 a[i] = a[j];

 a[j] = temp;

i++;
j--;

}
 
printf("%s\n", a);



 getch();
 return 0;

}
