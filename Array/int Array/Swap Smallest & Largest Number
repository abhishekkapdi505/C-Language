#include <stdio.h>
#include <conio.h>
#include <string.h>
#include <math.h>

int main () {

 int a[20];
 int i,j,large,small,size,lindex,sindex,temp;
 
 printf("Enter a Size::");
 scanf("%d", &size);

 for(i = 0; i < size; i++) {
 printf("Enter a Number::");
 scanf("%d", &a[i]);

 large = a[0];
 small = a[0];
  
 }

 for(i = 0; i < size; i++) {
 printf("\t %d", a[i]);

 if(a[i] > large) {
 large = a[i];
 lindex = i;
}
 }

for(j = 0; j < size; j++) {
  if(a[j] < small) {
   small = a[j];
  sindex = j;
}
}

 temp = a[sindex];
 
 a[sindex] = a[lindex];
 
 a[lindex] = temp;
 
 printf("\n \n");
 
 printf("Smallest Number is::%d", small);
 printf("\nLargest Number is::%d", large);
 
  printf("\n \n");
 
 for(i = 0; i < size; i++) {
 printf("\t %d ", a[i]);
 }
 

 getch();
 return 0;

}
