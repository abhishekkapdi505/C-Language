#include <stdio.h>
#include <conio.h>

int main () {

 int i,j,n,temp,arr[50];

 printf("Enter a Size of array::");
scanf("%d", &n);

 for(i = 0; i < n; i++) { 
  printf("Enter a Number::");
  scanf("%d", &arr[i]);
}

printf("Before Shorting\n");

 for(i = 0; i < n; i++) { 
  
  printf(" %d ", arr[i]);

}


 for(i = 0; i < n-1; i++) {
  for(j = 0; j < n-1; j++) { 
      if(arr[j] > arr[j+1]) {
         temp = arr[j];
        
         arr[j] = arr[j+1];
        
         arr[j+1] = temp;
        
        }
        }
        }
        
        
        printf("\nAfter Sorting\n");
        
        for(i = 0; i<n; i++) { 
  
  printf(" %d ", arr[i]);

}
        
 getch();
 return 0;

}
