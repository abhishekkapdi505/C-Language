#include <stdio.h>
#include <conio.h>
#include <string.h>
#include <math.h>

int main () {

 int a[20];
 int i,j,index,large,size;
 
 printf("Enter a Size::");
 scanf("%d", &size);



 for(i = 0; i < size; i++) {
 printf("Enter a Number::");
 scanf("%d", &a[i]);

 large = a[0];
  
 }

 for(i = 0; i < size; i++) {
 printf("\t %d", a[i]);

 if(a[i] > large) {
 large = a[i];
 index = i;
}
 }
 
 
printf("\nlarge Number is::%d", large);
printf("\nIndex of large Number::%d", index);

 getch();
 return 0;

}
