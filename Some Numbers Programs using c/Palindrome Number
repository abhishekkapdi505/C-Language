#include <stdio.h>
#include <conio.h>

int main()
{
    int num,temp,r,sum = 0;
    
    printf("Enter a Number::");
    scanf("%d", &num);
    
    for(temp = num; num  != 0; num = num / 10) {
    
     r = num % 10;
    
     sum = sum * 10 + r;
    
    }
    
    if(temp == sum) { 
     
     printf("Palindrome Number");
    
    } else { 
    
     printf("Not Palindrome Number");
    
    } 
    
    getch();
    return 0;
    
    }
