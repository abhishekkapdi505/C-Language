#include <stdio.h>
#include <conio.h>
#include <string.h>
#include <math.h>

int main () {

 int a[20];
 int i,j,index,small,size;
 
 printf("Enter a Size::");
 scanf("%d", &size);



 for(i = 0; i < size; i++) {
 printf("Enter a Number::");
 scanf("%d", &a[i]);

 small = a[0];
  
 }

 for(i = 0; i < size; i++) {
 printf("\t %d", a[i]);

 if(a[i] < small) {
 small = a[i];
 index = i;
}
 }
 
 
printf("\n Small Number is::%d", small);
printf("\nIndex of Small Number::%d", index);

 getch();
 return 0;

}
